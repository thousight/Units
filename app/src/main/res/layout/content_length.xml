<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:weightSum="1"
            tools:ignore="ExtraText">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="end"
                android:id="@+id/lengthEditText"
                android:textSize="30sp"
                android:layout_weight="1.01"
                tools:ignore="InefficientWeight" />

            <Spinner
                android:layout_width="112dp"
                android:layout_height="57dp"
                android:id="@+id/lengthSpinner" />
            <!--android:layout_below="@+id/editText"-->
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/kmText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" kilometers"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:background="@color/lightGray">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/mText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="viewStart"
                        android:layout_weight="1"
                        android:text=" meters"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/cmText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" centimeters"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:background="@color/lightGray">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/mmText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" millimeters"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/umText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" micrometers"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:background="@color/lightGray">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/nmText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" nanometers"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/miText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" miles"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:background="@color/lightGray">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/ydText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" yards"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/ftText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" feet"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:weightSum="2"
                    android:background="@color/lightGray">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:id="@+id/inText"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:text=" inches"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>