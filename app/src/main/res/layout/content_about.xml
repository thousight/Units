<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="65dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp" />

    <TextView
        android:text="The MIT License (MIT) Copyright (c) 2016 Mark Wen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />

    <TextView
        android:text="@string/thank_you_for_using_units_this_app_was_originally_developed_for_the_programming_assignment_of_cnit_35500_in_purdue_university_but_i_hope_this_app_can_help_those_in_need_of_a_clean_and_light_weight_unit_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>