<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="ExtraText">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginTop="65dp"
            android:id="@+id/imageView"
            android:layout_height="90dp"
            android:layout_weight="0.11"
            tools:ignore="InefficientWeight"
            android:contentDescription="@string/icon_of_units" />

        <TextView
            android:text="@string/thank_you_for_using_units_this_app_was_originally_developed_for_the_programming_assignment_of_cnit_35500_in_purdue_university_but_i_hope_this_app_can_help_those_in_need_of_a_clean_and_light_weight_unit_converter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:id="@+id/textView"
            android:textAlignment="center" />

        <TextView
            android:text="@string/the_mit_license_mit_copyright_c_2016_mark_wen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:id="@+id/textView4"
            android:textSize="10sp"
            android:textAlignment="center"
            tools:ignore="SmallSp" />

        <!--android:layout_below="@+id/textView"-->
        android:layout_centerHorizontal="true" />
    </LinearLayout>
</ScrollView>