<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LengthTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#1EC7AC</item>
        <item name="android:textAppearanceListItemSmall">@style/CustomSpinnerStyle</item>
    </style>

    <style name="LengthTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LengthTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LengthTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomSpinnerStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>